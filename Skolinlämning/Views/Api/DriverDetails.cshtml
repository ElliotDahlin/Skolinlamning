@model IEnumerable<Skolinlämning.Models.Driver>

<div class="container mt-5">
    <h2 class="text-center">Driver Details</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row justify-content-around flex-wrap">
            @foreach (var driver in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card bg-dark" style="width: 100%; min-height: 1rem; padding: 1rem; border: 3px solid #d9534f;">
                        <div class="card-body">
                            <h5 style="text-decoration: underline #d9534f " class="card-title text-light">@driver.GivenName @driver.FamilyName</h5>
                            <h6 class="card-subtitle text-warning mb-2">@driver.Nationality</h6>
                            <p class="card-text text-light">ID: @driver.DriverId</p>
                            <p class="card-text text-light">Permanent Number: @driver.PermanentNumber</p>
                            <p class="card-text text-light">DOB: @driver.DateOfBirth</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <p>No driver details found.</p>
            </div>
        </div>
    }
</div>
